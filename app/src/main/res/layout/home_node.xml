<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_weight="1">

    <!-- Column 1 -->
    <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_row="0"
            android:layout_column="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/cardView_first_column">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >


            <ImageView
                    android:src="@drawable/thermometer"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/temperature_description"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/imageView_first_column"/>

            <TextView
                    android:text="@string/temperature"
                    android:textAlignment="center"
                    android:textColor="@color/textColorBlue"
                    android:textSize="@dimen/textSize20"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/imageView_first_column"
                    android:layout_marginStart="4dp"
                    android:id="@+id/textTitle_first_column"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:text="20%"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize25"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_first_column"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textTitle_first_column"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <!-- Column 2 -->
    <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/cardView_second_column">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


            <ImageView
                    android:src="@drawable/thermometer"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/temperature_description"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/imageView_second_column"/>

            <TextView
                    android:text="@string/temperature"
                    android:textAlignment="center"
                    android:textColor="@color/textColorBlue"
                    android:textSize="@dimen/textSize20"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/imageView_second_column"
                    android:layout_marginStart="4dp"
                    android:id="@+id/textTitle_second_column"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:text="20%"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize25"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_second_column"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textTitle_second_column"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>