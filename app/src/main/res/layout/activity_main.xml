<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF424242"
>


    <TextView
            android:text="@string/temperature_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginTop="10dp"
            android:layout_marginEnd="219dp" android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
            android:layout_marginStart="25dp" android:textSize="50sp" android:textColor="#FFFFFF"
            android:textAlignment="textStart" android:layout_below="@+id/textView3"/>
    <TextView
            android:text="@string/temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="221dp" android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
            android:layout_marginStart="25dp" android:textSize="25sp" android:textColor="#FFFFFF"
            android:textAlignment="textStart"/>
    <TextView
            android:text="@string/humidity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="30dp"
            android:layout_marginEnd="225dp" android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
            android:layout_marginStart="25dp" android:textSize="25sp" android:textColor="#FFFFFF"
            android:textAlignment="textStart" android:layout_below="@+id/textView"/>
    <TextView
            android:text="@string/humidity_value"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:id="@+id/textView5" android:layout_marginTop="80dp"
            android:layout_marginEnd="147dp" android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
            android:layout_marginStart="152dp" android:textSize="30sp" android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/imageView2" android:layout_alignTop="@+id/imageView2"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/user_photo"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="25dp" android:layout_marginTop="25dp"
            android:contentDescription="@string/user_photo_description"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp" app:srcCompat="@drawable/chart" android:id="@+id/imageView2"
            android:layout_marginTop="20dp" android:layout_below="@+id/textView4" android:layout_alignParentEnd="true"
            android:layout_marginEnd="67dp" android:layout_alignParentStart="true" android:layout_marginStart="75dp"
            android:contentDescription="@string/chart_description"/>

</RelativeLayout>
